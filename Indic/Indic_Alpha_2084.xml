                    <msContents>
                        
                        <summary>A collection of two fasting ('vrata') texts connected with the five sages.</summary>
                        
                        <textLang mainLang="sa">Sanskrit</textLang>
                        
                        <msItem xml:id="Alpha_2084_1">
                            <title>Ṛṣipañcamīvrata</title>
                            
                            <note>A <title>Ṛṣipañcamīvrata</title>; see <abbr>NCC</abbr>, vol. 3, p. 41.</note>
                            
                            <incipit> <locus>F. 1v</locus>
                                <!-- Transcript -->
                                śrīgaṇeśāya namaḥ ||
                                mama sakalapāpakṣayārthaṃ śrīparameśvaraprītyarthaṃ
                                ṛṣipaṃcami(mī)vratam aham kariṣye || tadaṃgakalaśārcanaṃ ||
                                    kaśyapo (')trir bharadvāja (jo)
                                    viśvāmitro (')tha gautamaḥ ||
                                    jamadagnir vasiṣṭ(h)aś ca
                                    saptaite ṛṣayaḥ smṛt(ā)ḥ ||
                            </incipit>
                            
                            <explicit> <locus>F. 2v</locus>
                                <!-- Transcript -->
                                ... anena pūjanena sapta ṛṣayaḥ priyatāṃ ||
                                atha brāhmaṇapūjanaṃ || vāyanadānaṃ ||
                            </explicit>
                            
                        </msItem>
                        
                        <msItem xml:id="Alpha_2084_2">
                            <title>Ṛṣipañcamīvratakathā</title>
                            
                            <note>The <title>Ṛṣipañcamīvratakathā</title> in 56 verses from the <title>Padmapurāṇa</title>.
                                <abbr>NCC</abbr>, vol. 3, p. 41-42 lists works of this title from the <title>Brahmavaivarta</title>,
                            <title>Brahmāṇḍa</title>, <title>Bhaviṣyottara</title>, and <title>Skanda</title> purāṇas, but not from the <title>Padmapurāṇa</title></note>
                            
                            <incipit> <locus>F. 2v</locus>
                                <!-- Transcript -->
                                ... atha kathā || śrīkṛṣṇa uvāca ||
                                śṛṇu pārtha pravakṣyāmi
                                vratānām uttamaṃ vrataṃ ||
                                yasya kīrttanamātreṇa
                                sarvapāpai(ḥ) pramucyate ||
                            </incipit>
                            
                            <explicit> <locus>F. 5v</locus>
                                <!-- Transcript -->
                                śṛ(śru)tvā kathām imāṃ puṇyāṃ
                                bhaktiyuktena cetasā ||
                                vācaye(c) chrāvayed bha ///
                                kāmasaṃpūrṇahetave ||56||
                            </explicit>
                            
                            <colophon> <locus>F. 5v</locus>
                                <!-- Transcript -->
                                iti śrīpadmapurāṇe ṛṣipaṃcamīvratakathā samāptā ||
                                śrīkṛṣṇārpaṇam astu || śake 1641 vikārināmasaṃvatsam<gap/>
                                bhādre śuddhapakṣe tṛti(tī)yāyāṃ puṇyatithau ||
                                samāptim agā(t)
                            </colophon>
                            
                        </msItem>
                        
